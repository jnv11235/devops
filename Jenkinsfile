   pipeline {
      agent any
     
       stages {
            stage('Build') {
               steps {
                    echo 'Hello World'
               }
            }
            
            stage('Test') {
                steps {
                    echo 'Running tests ... '
                }
            }
            
            stage('Deploy') {
                steps {
                    echo 'Deploying to production ... '
                }
            }
        }
    }